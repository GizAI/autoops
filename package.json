{
  "name": "autops",
  "version": "1.0.0",
  "description": "Automated operations system for email support and more",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node --transpile-only src/index.ts",
    "build": "tsc",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:init": "ts-node src/scripts/init-db.ts",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:jest:ui": "jest --testPathPattern=src/__tests__/ui",
    "test:jest:api": "jest --testPathPattern=src/__tests__/api",
    "test:jest:all": "npm run test:jest:api && npm run test:jest:ui",
    "test:jest:ci": "npm run test:jest:all -- --ci",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:debug": "npx playwright test --debug",
    "test:e2e:report": "npx playwright show-report",
    "monitor:servers": "ts-node src/scripts/server-monitor.ts",
    "test:auto": "ts-node src/scripts/run-tests.ts",
    "test:auto:fix": "ts-node src/scripts/fix-tests.ts",
    "test:monitor": "ts-node src/scripts/auto-test-runner.ts",
    "create:test-users": "ts-node src/scripts/create-test-user.ts",
    "test:ui": "ts-node src/scripts/ui-test.ts",
    "test:api": "ts-node src/scripts/api-test.ts",
    "test:integrated": "ts-node src/scripts/integrated-test.ts",
    "test:all": "npm run test:integrated"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "bottleneck": "^2.19.5",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "googleapis": "^148.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "langdetect": "^0.2.1",
    "openai": "^4.95.1",
    "pg": "^8.14.1",
    "pg-promise": "^11.13.0",
    "pgvector": "^0.2.0",
    "prisma": "^6.6.0",
    "puppeteer": "^24.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.0",
    "ts-jest": "^29.1.2"
  }
}
